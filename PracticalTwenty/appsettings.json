{
  "Serilog": {
    "Usings": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimalLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      },
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": {
            "Path": "/logs/log-.txt",
            "RollingInteval": "Day",
            "RollOnFileLimitSize": true,
            "formatter": "Serilog.Formatting.Compact.CompactJSONFormatter"
          }
        }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ]
    }
  }, 
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"DefaultConnection": "Data Source=.;Initial Catalog=Practical20;Persist Security Info=True;User ID=CTO;Password=CTO@123;TrustServerCertificate=True"
    "DefaultConnection": "Data Source=BHAVIN-IDEAPAD\\SQLEXPRESS;Initial Catalog=Practical20;Integrated Security=True;TrustServerCertificate=True"
  }
}
